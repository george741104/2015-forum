<div class="container">
  <div class="row">
    <div class="container">
      <ul class="list-group">
        <li class="list-group-item"><%= link_to"Add Post", new_post_path, :class=>"btn btn-primary"%></li>
      </ul>
    </div>
    <div class="container">

      <ul class="nav nav-tabs sorting">
        <li role="presentation"><%=sortable "title" %></li>
        <li role="presentation"><%=sortable "created_at", "Created" %></li>
        <li role="presentation"><%=sortable "content" %></li>
      </ul>


      <table class="table">
        <tr>
          <th>Title</th>
          <th>Content</th>
        </tr>
        <% @posts.each do |p| %>
        <tr>
          <td> <%= p.title %> </td>
          <td> <%= p.content %> </td>
        </tr>
        <% end %>

      </table>
    </div>
  </div>
</div>
